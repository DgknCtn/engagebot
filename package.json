{
  "name": "vanth-bot-monorepo",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "scripts": {
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "typecheck": "pnpm -r typecheck",
    "db:migrate": "pnpm --filter @vanth/services prisma migrate dev",
    "db:deploy": "pnpm --filter @vanth/services prisma migrate deploy",
    "db:generate": "pnpm --filter @vanth/services prisma generate"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "^20.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.16.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "prettier": "^3.3.3",
    "prisma": "^5.20.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
